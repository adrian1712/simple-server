<h1>Edit Products</h1>

{{#if message.success}}
    <div class="success notice">
        <p>
            {{ message.success}}
        </p>
    </div>
{{/if}}

<form method='POST' action="/product" enctype="application/x-www-form-urlencoded">
    <input name="name" placeholder="Name" value="{{data.product.name}}">
    <input name="price" placeholder="Price" value="{{data.product.price}}">
    <input name="image" placeholder="Image" value="{{data.product.image}}">
    <textarea name="description" placeholder="Description" value="{{data.product.description}}"></textarea>
    <button type="submit">Submit</button>
</form>
