<h2>Products</h2>

<a class="btn btn-warning"href="/product/{{ data.product.id }}/edit">Edit Product</a>
<a class="btn btn-danger"href="/product/{{ data.product.id }}/delete">Delete Product</a>

<div class="panel panel-default">
    <div class="panel-body">
        <div>
            <strong>Name</strong> {{ data.product.name }}
        </div>
        <div>
            <strong>Description</strong> {{data.product.description}}
        </div>
        <div>
            <strong>Price</strong>  {{data.product.price}}
        </div>
        <div>
            <strong>Image</strong>  {{data.product.image}}
        </div>
    </div>
</div>
{{#if user}}
<div class="panel panel-defult">
    <div class="panel-body">
        <form class="panel-body" action="/product/{{data.product.id}}/comment" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label>Comment</label>
                <textarea class="form-control"name="content"></textarea>
                <button class="btn btn-success"type="submit">Add Comment</button>
            </div>
        </form>

    </div>
</div>
{{/if}}
{{#each data.product.comments}}
    <div class="panel panel-defult">
        <div class="panel-body">
            <a href="/user/{{author.id}}">{{author.username}}</a>
            <p>{{content}}</p>
        </div>
    </div>
{{/each}}
